    "definitions": {
        "internal_controllers.CreateTaskRequest": {
            "type": "object",
            "required": [
                "performed_at",
                "summary",
                "title"
            ],
            "properties": {
                "performed_at": {
                    "type": "string",
                    "example": "2024-03-20T14:30:00Z"
                },
                "summary": {
                    "type": "string",
                    "example": "Replaced filters and recharged coolant"
                },
                "title": {
